{
    "manifest_version": 2,

    "name": "NHL Playoff Picture",
    "description": "Gives real-time scoring updates for NHL games",

    "version": "1.0",


    "content_scripts": [
        {
            "matches": [ "*://*/*" ],
            "css": [ "content_scripts/worst-thing-ever.css"],
            "js": [ "content_scripts/jquery.min.js", "content_scripts/fun_replacement.js",
            "content_scripts/api_poll.js", "content_scripts/main.js" ]
        }
    ],
    "permissions": [
        "*://*/*", "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": "popup/icon.png",
        "default_title": "NHL Playoff Picture"
    }

}
